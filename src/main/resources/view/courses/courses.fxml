<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="900.0" styleClass="root"
    xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="controller.CoursesController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="900.0" spacing="20.0"
            styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#backToDashboard" styleClass="button"
                    text="â† Back" />
                <Label styleClass="title" text="Courses Management" />
            </children>
            <padding>
                <Insets left="20.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <TableView fx:id="coursesTable" prefHeight="200.0" prefWidth="200.0"
            BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Course Name" />
                <TableColumn fx:id="durationColumn" prefWidth="100.0" text="Duration" />
                <TableColumn fx:id="feesColumn" prefWidth="100.0" text="Fees" />
                <TableColumn fx:id="remarkColumn" prefWidth="200.0" text="Remark" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" styleClass="card"
            BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="label" text="Course Details" />
                <HBox spacing="10.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Name" />
                                <TextField fx:id="nameTextField" promptText="Course Name" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Duration" />
                                <TextField fx:id="durationTextField" promptText="e.g. 3 months" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Fees" />
                                <TextField fx:id="feesTextField" promptText="Fees" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Remark" />
                                <TextField fx:id="remarkTextField" promptText="Remarks"
                                    HBox.hgrow="ALWAYS" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#addCourse" styleClass="button"
                            text="Add Course" />
                        <Button mnemonicParsing="false" onAction="#editCourse" styleClass="button"
                            text="Update Selected" />
                        <Button mnemonicParsing="false" onAction="#deleteCourse"
                            styleClass="button, logout" text="Delete Selected" />
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>