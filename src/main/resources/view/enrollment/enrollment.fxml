<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="900.0" styleClass="root"
    xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="controller.EnrollmentController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="900.0" spacing="20.0"
            styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#backToDashboard" styleClass="button"
                    text="â† Back" />
                <Label styleClass="title" text="Enrollment Management" />
            </children>
            <padding>
                <Insets left="20.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <TableView fx:id="registrationTable" prefHeight="200.0" prefWidth="200.0"
            BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="studentColumn" prefWidth="150.0" text="Student" />
                <TableColumn fx:id="courseColumn" prefWidth="150.0" text="Course" />
                <TableColumn fx:id="feesColumn" prefWidth="100.0" text="Total Fees" />
                <TableColumn fx:id="paidColumn" prefWidth="100.0" text="Paid" />
                <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" styleClass="card"
            BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="label" text="New Enrollment" />
                <HBox spacing="10.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Select Student" />
                                <ComboBox fx:id="studentComboBox" prefWidth="200.0"
                                    promptText="Choose Student" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Select Course" />
                                <ComboBox fx:id="courseComboBox" prefWidth="200.0"
                                    promptText="Choose Course" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Total Fees" />
                                <TextField fx:id="feesTextField" promptText="0" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Amount Paid" />
                                <TextField fx:id="paidTextField" promptText="0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#enroll" styleClass="button"
                            text="Enroll Student" />
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>