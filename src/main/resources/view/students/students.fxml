<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="900.0" styleClass="root"
    xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="controller.StudentsController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="900.0" spacing="20.0"
            styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#backToDashboard" styleClass="button"
                    text="â† Back" />
                <Label styleClass="title" text="Students Management" />
            </children>
            <padding>
                <Insets left="20.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <TableView fx:id="studentsTable" prefHeight="200.0" prefWidth="200.0"
            BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Phone" />
                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
                <TableColumn fx:id="addressColumn" prefWidth="200.0" text="Address" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" styleClass="card"
            BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="label" text="Student Details" />
                <HBox spacing="10.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Name" />
                                <TextField fx:id="nameTextField" promptText="Student Name" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Phone" />
                                <TextField fx:id="phoneTextField" promptText="01xxxxxxxxx" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Email" />
                                <TextField fx:id="emailTextField" promptText="email@example.com" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Address" />
                                <TextField fx:id="addressTextField" promptText="Address"
                                    HBox.hgrow="ALWAYS" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#addStudent" styleClass="button"
                            text="Add Student" />
                        <Button mnemonicParsing="false" onAction="#editStudent" styleClass="button"
                            text="Update Selected" />
                        <Button mnemonicParsing="false" onAction="#deleteStudent"
                            styleClass="button, logout" text="Delete Selected" />
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>